<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Test!</title>
    <link rel="stylesheet" href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link href="/Content/css/styles.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <h2 class="brighttext">Raptor Tracker</h2>
        <h4 class="brighttext">The Premium Cuisine and Restaurant Finder for Bipedal Carnivores from the Cretaceous Period</h4>
      </div>
      <div class="well">
        <div class="row">
          <div class="col-md-2"></div>
          <div class="col-md-8">
              <a href="/cuisine-form" class="btn btn-primary" type="click" name="button">Add Cuisine</a>
          </div>
        </div>
        @if (Model != null)
        {
          @if (Model.Count > 0)
          {
          <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
              <a href="/restaurant-form" class="btn btn-primary" type="click" name="button">Add Restaurant</a>
            </div>
          </div>


          <div class="row listOrganizer">
            <div class="col-md-4"></div>
            <div class="col-md-4">
              <h3>Cuisines:</h3>
                @foreach (var cuisine in Model)
                {
                  <ul>
                  <li><a href="/cuisine-restaurants/@cuisine.GetId()">@cuisine.GetCuisineType()</a></li>
                </ul>
                }
            </div>
          </div>
          }
        }
      </div>
        @Html.Partial("footer.cshtml")
    </div>

  </body>
</html>
