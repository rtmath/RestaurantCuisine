<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Test!</title>
    <link rel="stylesheet" href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link href="/Content/css/styles.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <div class="row">
       <form class="" action="/add-restaurant" method="post">
         <input type="text" placeholder="Enter a new restaurant type here" name="restform" value="">
         <select name="cuisine-id">
          @foreach (var cuisine in Model)
          {
            <option value="@cuisine.GetId()">@cuisine.GetCuisineType()</option>
          }
        </select>
         <button type="submit" name="button">Add Restaurant</button>
       </form>
       @Html.Partial("footer.cshtml")
    </div>
  </body>
</html>
